<div class="container py-5">
  <div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <h1 class="display-6"><i class="fas fa-tags text-success"></i> Service Categories</h1>
      <a href="/database" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Back</a>
    </div>
  </div>
  <div class="row g-4">
    <% if (categories.length === 0) { %>
      <div class="col-12">
        <div class="alert alert-info">No categories found.</div>
      </div>
    <% } %>
    <% categories.forEach(category => { %>
      <div class="col-lg-6">
        <div class="card card-custom h-100">
          <div class="card-body">
            <h5 class="card-title mb-1"><i class="fas fa-folder"></i> <%= category.name %></h5>
            <p class="text-muted"><%= category.description || 'â€”' %></p>
            <small class="text-muted">
              <i class="fas fa-box"></i> Products: <strong><%= category.product_count || 0 %></strong>
            </small>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>