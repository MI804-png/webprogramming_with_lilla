<div class="container py-5">
  <div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <h1 class="display-6"><i class="fas fa-project-diagram text-info"></i> Recent Projects</h1>
      <a href="/database" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Back</a>
    </div>
  </div>
  <div class="row g-4">
    <% if (projects.length === 0) { %>
      <div class="col-12">
        <div class="alert alert-info">No projects found.</div>
      </div>
    <% } %>
    <% projects.forEach(project => { %>
      <div class="col-lg-6">
        <div class="card card-custom h-100">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <h5 class="card-title mb-0"><%= project.title %></h5>
              <% 
                let badge = 'bg-secondary';
                if (project.status === 'completed') badge = 'bg-success';
                else if (project.status === 'in_progress') badge = 'bg-primary';
                else if (project.status === 'planning') badge = 'bg-warning';
                else if (project.status === 'on_hold') badge = 'bg-danger';
              %>
              <span class="badge <%= badge %>"><%= project.status.replace('_',' ') %></span>
            </div>
            <p class="text-muted"><%= project.description %></p>
            <div class="d-flex justify-content-between text-muted">
              <small><i class="fas fa-user"></i> <%= project.client_name || '—' %></small>
              <small><i class="fas fa-calendar"></i> <%= project.start_date ? new Date(project.start_date).toLocaleDateString() : 'TBD' %> → <%= project.end_date ? new Date(project.end_date).toLocaleDateString() : '—' %></small>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>