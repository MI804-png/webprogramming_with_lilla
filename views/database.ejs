<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold">Our Services & Portfolio</h1>
                <p class="lead text-muted">Explore our comprehensive range of technology solutions</p>
            </div>
        </div>
    </div>
    
    <!-- Navigation Tabs -->
    <div class="row mb-4">
        <div class="col-12">
            <ul class="nav nav-pills nav-fill mb-4" id="databaseTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="overview-tab" data-bs-toggle="pill" data-bs-target="#overview" type="button">
                        <i class="fas fa-th-large"></i> Overview
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="products-tab" data-bs-toggle="pill" data-bs-target="#products" type="button">
                        <i class="fas fa-box"></i> Services (<%= products.length %>)
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="categories-tab" data-bs-toggle="pill" data-bs-target="#categories" type="button">
                        <i class="fas fa-tags"></i> Categories (<%= categories.length %>)
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="projects-tab" data-bs-toggle="pill" data-bs-target="#projects" type="button">
                        <i class="fas fa-project-diagram"></i> Recent Projects (<%= projects.length %>)
                    </button>
                </li>
            </ul>
        </div>
    </div>
    
    <!-- Tab Content -->
    <div class="tab-content" id="databaseTabsContent">
        <!-- Overview Tab -->
        <div class="tab-pane fade show active" id="overview" role="tabpanel">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card card-custom h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-box fa-3x text-primary mb-3"></i>
                            <h4>Services & Products</h4>
                            <p class="text-muted">We offer <%= products.length %> different services across <%= categories.length %> categories</p>
                            <a href="#products" class="btn btn-primary btn-custom" data-bs-toggle="pill">
                                View Services
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card card-custom h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-tags fa-3x text-success mb-3"></i>
                            <h4>Service Categories</h4>
                            <p class="text-muted">Organized into <%= categories.length %> specialized technology domains</p>
                            <a href="#categories" class="btn btn-success btn-custom" data-bs-toggle="pill">
                                View Categories
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card card-custom h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-project-diagram fa-3x text-info mb-3"></i>
                            <h4>Recent Projects</h4>
                            <p class="text-muted">Latest <%= projects.length %> projects showcasing our expertise</p>
                            <a href="#projects" class="btn btn-info btn-custom" data-bs-toggle="pill">
                                View Projects
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Products/Services Tab -->
        <div class="tab-pane fade" id="products" role="tabpanel">
            <div class="row">
                <div class="col-12">
                    <h3 class="mb-4">
                        <i class="fas fa-box text-primary"></i> Our Services & Products
                    </h3>
                </div>
            </div>
            
            <div class="row g-4">
                <% products.forEach(product => { %>
                <div class="col-lg-4 col-md-6">
                    <div class="card card-custom h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title"><%= product.name %></h5>
                                <% if (product.status === 'active') { %>
                                    <span class="badge bg-success">Active</span>
                                <% } else { %>
                                    <span class="badge bg-secondary">Inactive</span>
                                <% } %>
                            </div>
                            
                            <p class="card-text text-muted"><%= product.description %></p>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <% if (product.price) { %>
                                    <span class="h5 text-primary mb-0">$<%= product.price %></span>
                                <% } %>
                                <small class="text-muted">
                                    <i class="fas fa-tag"></i> <%= product.category_name || 'Uncategorized' %>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
        
        <!-- Categories Tab -->
        <div class="tab-pane fade" id="categories" role="tabpanel">
            <div class="row">
                <div class="col-12">
                    <h3 class="mb-4">
                        <i class="fas fa-tags text-success"></i> Service Categories
                    </h3>
                </div>
            </div>
            
            <div class="row g-4">
                <% categories.forEach(category => { %>
                <div class="col-lg-6 col-md-6">
                    <div class="card card-custom h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fas fa-folder text-success"></i> <%= category.name %>
                            </h5>
                            <p class="card-text text-muted"><%= category.description %></p>
                            <small class="text-muted">
                                <i class="fas fa-calendar"></i> Created: <%= new Date(category.created_at).toLocaleDateString() %>
                            </small>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
        
        <!-- Projects Tab -->
        <div class="tab-pane fade" id="projects" role="tabpanel">
            <div class="row">
                <div class="col-12">
                    <h3 class="mb-4">
                        <i class="fas fa-project-diagram text-info"></i> Recent Projects
                    </h3>
                </div>
            </div>
            
            <div class="row g-4">
                <% projects.forEach(project => { %>
                <div class="col-lg-6">
                    <div class="card card-custom h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title"><%= project.title %></h5>
                                <% 
                                let statusClass = 'secondary';
                                if (project.status === 'completed') statusClass = 'success';
                                else if (project.status === 'in_progress') statusClass = 'primary';
                                else if (project.status === 'planning') statusClass = 'warning';
                                else if (project.status === 'on_hold') statusClass = 'danger';
                                %>
                                <span class="badge bg-<%= statusClass %>"><%= project.status.replace('_', ' ').toUpperCase() %></span>
                            </div>
                            
                            <p class="card-text text-muted"><%= project.description %></p>
                            
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="fas fa-user"></i> Client: <strong><%= project.client_name %></strong>
                                </small>
                            </div>
                            
                            <% if (project.technologies) { %>
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="fas fa-code"></i> Technologies: <%= project.technologies %>
                                </small>
                            </div>
                            <% } %>
                            
                            <div class="d-flex justify-content-between text-muted">
                                <small>
                                    <i class="fas fa-calendar-alt"></i> 
                                    <%= project.start_date ? new Date(project.start_date).toLocaleDateString() : 'TBD' %>
                                </small>
                                <small>
                                    <i class="fas fa-flag-checkered"></i> 
                                    <%= project.end_date ? new Date(project.end_date).toLocaleDateString() : 'Ongoing' %>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
    
    <!-- Call to Action -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body text-center py-4">
                    <h4>Interested in Our Services?</h4>
                    <p class="mb-3">Contact us today to discuss your project requirements</p>
                    <a href="/contact" class="btn btn-light btn-custom">
                        <i class="fas fa-envelope"></i> Get In Touch
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>