<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="card card-custom shadow">
                <div class="card-body p-5">
                    <i class="fas fa-exclamation-triangle fa-4x text-warning mb-4"></i>
                    <h1 class="display-4 text-danger mb-3">Oops!</h1>
                    <h3 class="mb-4"><%= title || 'Something went wrong' %></h3>
                    <p class="text-muted mb-4">
                        <%= message || 'An unexpected error occurred. Please try again later.' %>
                    </p>
                    
                    <div class="d-flex justify-content-center gap-3">
                        <a href="javascript:history.back()" class="btn btn-secondary btn-custom">
                            <i class="fas fa-arrow-left"></i> Go Back
                        </a>
                        <a href="/" class="btn btn-primary btn-custom">
                            <i class="fas fa-home"></i> Home Page
                        </a>
                        <a href="/contact" class="btn btn-outline-primary btn-custom">
                            <i class="fas fa-envelope"></i> Contact Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>