<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-5 fw-bold">
                    <i class="fas fa-arrow-left text-primary"></i> 
                    <a href="<%= basePath %>/crud" class="text-decoration-none">Product Management</a> / View
                </h1>
                <div class="btn-group">
                    <a href="<%= basePath %>/crud/edit/<%= product.id %>" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit Product
                    </a>
                    <button class="btn btn-danger" onclick="deleteProduct()">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-8">
            <div class="card card-custom shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-box"></i> <%= product.name %>
                        </h4>
                        <% if (product.status === 'active') { %>
                            <span class="badge bg-success fs-6">Active</span>
                        <% } else { %>
                            <span class="badge bg-danger fs-6">Inactive</span>
                        <% } %>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6><i class="fas fa-hashtag"></i> Product ID:</h6>
                            <p class="text-muted">#<%= product.id %></p>
                        </div>
                        
                        <div class="col-md-6">
                            <h6><i class="fas fa-folder"></i> Category:</h6>
                            <p class="text-muted">
                                <% if (product.category_name) { %>
                                    <span class="badge bg-secondary"><%= product.category_name %></span>
                                <% } else { %>
                                    <span class="text-muted">Uncategorized</span>
                                <% } %>
                            </p>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <h6><i class="fas fa-align-left"></i> Description:</h6>
                        <div class="p-3 bg-light rounded">
                            <p class="mb-0" style="white-space: pre-wrap;"><%= product.description %></p>
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6><i class="fas fa-dollar-sign"></i> Price:</h6>
                            <p class="text-muted">
                                <% if (product.price) { %>
                                    <span class="h4 text-success">$<%= product.price %></span>
                                <% } else { %>
                                    <span class="text-muted">Not specified</span>
                                <% } %>
                            </p>
                        </div>
                        
                        <div class="col-md-6">
                            <h6><i class="fas fa-toggle-on"></i> Status:</h6>
                            <p class="text-muted">
                                <% if (product.status === 'active') { %>
                                    <span class="badge bg-success">Active - Visible to customers</span>
                                <% } else { %>
                                    <span class="badge bg-danger">Inactive - Hidden from customers</span>
                                <% } %>
                            </p>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-calendar-plus"></i> Created:</h6>
                            <p class="text-muted">
                                <%= new Date(product.created_at).toLocaleDateString() %> 
                                at <%= new Date(product.created_at).toLocaleTimeString() %>
                            </p>
                        </div>
                        
                        <div class="col-md-6">
                            <h6><i class="fas fa-calendar-alt"></i> Last Updated:</h6>
                            <p class="text-muted">
                                <%= new Date(product.updated_at).toLocaleDateString() %> 
                                at <%= new Date(product.updated_at).toLocaleTimeString() %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <% if (product.image_url) { %>
            <div class="card card-custom shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-image"></i> Product Image
                    </h5>
                </div>
                <div class="card-body text-center">
                    <img src="<%= product.image_url %>" alt="<%= product.name %>" 
                         class="img-fluid rounded" style="max-height: 300px;"
                         onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                    <div style="display: none;" class="text-muted">
                        <i class="fas fa-exclamation-triangle"></i> Image not available
                    </div>
                </div>
            </div>
            <% } %>
            
            <div class="card card-custom shadow mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cogs"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="<%= basePath %>/crud/edit/<%= product.id %>" class="btn btn-outline-primary">
                            <i class="fas fa-edit"></i> Edit Product
                        </a>
                        
                        <% if (product.status === 'active') { %>
                        <button class="btn btn-outline-warning" onclick="toggleStatus('inactive')">
                            <i class="fas fa-pause"></i> Deactivate
                        </button>
                        <% } else { %>
                        <button class="btn btn-outline-success" onclick="toggleStatus('active')">
                            <i class="fas fa-play"></i> Activate
                        </button>
                        <% } %>
                        
                        <button class="btn btn-outline-secondary" onclick="window.print()">
                            <i class="fas fa-print"></i> Print Details
                        </button>
                        
                        <hr>
                        
                        <button class="btn btn-outline-danger" onclick="deleteProduct()">
                            <i class="fas fa-trash"></i> Delete Product
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="card card-custom shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line"></i> Product Statistics
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="text-primary"><%= product.id %></h4>
                            <small class="text-muted">Product ID</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-info">
                                <%= Math.floor((new Date() - new Date(product.created_at)) / (1000 * 60 * 60 * 24)) %>
                            </h4>
                            <small class="text-muted">Days Old</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Navigation -->
    <div class="row mt-4">
        <div class="col-12 text-center">
            <div class="btn-group">
                <a href="<%= basePath %>/crud" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <a href="<%= basePath %>/crud/add" class="btn btn-success">
                    <i class="fas fa-plus"></i> Add New Product
                </a>
            </div>
        </div>
    </div>
</div>

<script>
function deleteProduct() {
    if (confirm(`Are you sure you want to delete "${<%= JSON.stringify(product.name) %>}"? This action cannot be undone.`)) {
        const form = document.createElement('form');
        form.method = 'POST';
    form.action = `<%= basePath %>/crud/delete/<%= product.id %>`;
        document.body.appendChild(form);
        form.submit();
    }
}

function toggleStatus(newStatus) {
    const statusText = newStatus === 'active' ? 'activate' : 'deactivate';
    if (confirm(`Are you sure you want to ${statusText} this product?`)) {
        // Create a form to update status
        const form = document.createElement('form');
        form.method = 'POST';
    form.action = `<%= basePath %>/crud/edit/<%= product.id %>`;
        
        // Add hidden fields for all current values
        const fields = {
            name: '<%= product.name %>',
            description: `<%= product.description.replace(/'/g, "\\'").replace(/\n/g, "\\n") %>`,
            price: '<%= product.price || "" %>',
            category_id: '<%= product.category_id || "" %>',
            image_url: '<%= product.image_url || "" %>',
            status: newStatus
        };
        
        Object.keys(fields).forEach(key => {
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = key;
            input.value = fields[key];
            form.appendChild(input);
        });
        
        document.body.appendChild(form);
        form.submit();
    }
}
</script>