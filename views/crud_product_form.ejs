<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-5 fw-bold">
                    <i class="fas fa-arrow-left text-primary"></i> 
                    <a href="<%= basePath %>/crud" class="text-decoration-none">Product Management</a> / 
                    <%= action === 'add' ? 'Add Product' : 'Edit Product' %>
                </h1>
            </div>
        </div>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card card-custom shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <% if (action === 'add') { %>
                            <i class="fas fa-plus"></i> Add New Product
                        <% } else { %>
                            <i class="fas fa-edit"></i> Edit Product
                        <% } %>
                    </h4>
                </div>
                <div class="card-body p-4">
                    <% if (error) { %>
                    <div class="alert alert-danger alert-custom">
                        <i class="fas fa-exclamation-circle"></i> <%= error %>
                    </div>
                    <% } %>
                    
                    <form action="<%= action === 'add' ? (basePath + '/crud/add') : (basePath + '/crud/edit/' + product.id) %>" method="POST" id="productForm">
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label for="name" class="form-label">
                                    <i class="fas fa-tag"></i> Product/Service Name *
                                </label>
                                <input type="text" class="form-control" id="name" name="name" 
                                       value="<%= product ? product.name : '' %>" required>
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                <label for="status" class="form-label">
                                    <i class="fas fa-toggle-on"></i> Status
                                </label>
                                <select class="form-select" id="status" name="status">
                                    <option value="active" <%= (product && product.status === 'active') || !product ? 'selected' : '' %>>Active</option>
                                    <option value="inactive" <%= product && product.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="description" class="form-label">
                                <i class="fas fa-align-left"></i> Description *
                            </label>
                            <textarea class="form-control" id="description" name="description" rows="4" 
                                      placeholder="Describe the product or service in detail..." required><%= product ? product.description : '' %></textarea>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="category_id" class="form-label">
                                    <i class="fas fa-folder"></i> Category
                                </label>
                                <select class="form-select" id="category_id" name="category_id">
                                    <option value="">Select Category (Optional)</option>
                                    <% categories.forEach(category => { %>
                                    <option value="<%= category.id %>" 
                                            <%= product && product.category_id == category.id ? 'selected' : '' %>>
                                        <%= category.name %>
                                    </option>
                                    <% }); %>
                                </select>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label for="price" class="form-label">
                                    <i class="fas fa-dollar-sign"></i> Price (USD)
                                </label>
                                <input type="number" class="form-control" id="price" name="price" 
                                       step="0.01" min="0" placeholder="0.00"
                                       value="<%= product && product.price ? product.price : '' %>">
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="image_url" class="form-label">
                                <i class="fas fa-image"></i> Image URL
                            </label>
                            <input type="url" class="form-control" id="image_url" name="image_url" 
                                   placeholder="https://example.com/image.jpg"
                                   value="<%= product ? product.image_url || '' : '' %>">
                            <small class="form-text text-muted">Optional: URL to product image</small>
                        </div>
                        
                        <div class="row">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6><i class="fas fa-lightbulb"></i> Tips for better products:</h6>
                                        <ul class="mb-0 small text-muted">
                                            <li>Use clear, descriptive names</li>
                                            <li>Provide detailed descriptions to help customers understand the value</li>
                                            <li>Select appropriate categories for better organization</li>
                                            <li>Add competitive pricing if applicable</li>
                                            <li>Use high-quality images to showcase your products</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <hr>
                        
                        <div class="d-flex justify-content-between">
                            <a href="<%= basePath %>/crud" class="btn btn-secondary btn-custom">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            
                            <div>
                                <% if (action === 'edit' && product) { %>
                                <a href="<%= basePath %>/crud/view/<%= product.id %>" class="btn btn-outline-info btn-custom me-2">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <% } %>
                                
                                <button type="submit" class="btn btn-primary btn-custom">
                                    <% if (action === 'add') { %>
                                        <i class="fas fa-plus"></i> Create Product
                                    <% } else { %>
                                        <i class="fas fa-save"></i> Update Product
                                    <% } %>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card card-custom shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle"></i> Form Help
                    </h5>
                </div>
                <div class="card-body">
                    <h6>Required Fields:</h6>
                    <ul class="small">
                        <li><strong>Name:</strong> Clear product/service title</li>
                        <li><strong>Description:</strong> Detailed explanation</li>
                    </ul>
                    
                    <h6>Optional Fields:</h6>
                    <ul class="small">
                        <li><strong>Category:</strong> Helps organize products</li>
                        <li><strong>Price:</strong> Set competitive pricing</li>
                        <li><strong>Image URL:</strong> Visual representation</li>
                        <li><strong>Status:</strong> Control visibility</li>
                    </ul>
                    
                    <hr>
                    
                    <h6>Categories Available:</h6>
                    <div class="d-flex flex-wrap gap-1">
                        <% categories.forEach(category => { %>
                        <span class="badge bg-secondary small"><%= category.name %></span>
                        <% }); %>
                    </div>
                </div>
            </div>
            
            <% if (action === 'edit' && product && product.image_url) { %>
            <div class="card card-custom shadow mt-3">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-image"></i> Current Image
                    </h6>
                </div>
                <div class="card-body text-center">
                    <img src="<%= product.image_url %>" alt="<%= product.name %>" 
                         class="img-fluid rounded" style="max-height: 200px;"
                         onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                    <div style="display: none;" class="text-muted">
                        <i class="fas fa-exclamation-triangle"></i> Image not available
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>

<script>
document.getElementById('productForm').addEventListener('submit', function(e) {
    const name = document.getElementById('name').value.trim();
    const description = document.getElementById('description').value.trim();
    
    if (!name || !description) {
        e.preventDefault();
        alert('Please fill in all required fields (Name and Description).');
        return false;
    }
    
    if (name.length < 3) {
        e.preventDefault();
        alert('Product name must be at least 3 characters long.');
        return false;
    }
    
    if (description.length < 10) {
        e.preventDefault();
        alert('Description must be at least 10 characters long.');
        return false;
    }
});

// Auto-resize textarea
document.getElementById('description').addEventListener('input', function() {
    this.style.height = 'auto';
    this.style.height = this.scrollHeight + 'px';
});
</script>